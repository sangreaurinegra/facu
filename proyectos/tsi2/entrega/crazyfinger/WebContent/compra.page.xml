<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd">

	<begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{compraHome.wire}"/>

   <param name="paqueteturisticoFrom"/>
   <param name="paqueteturisticoIdPaqueteturistico" value="#{paqueteturisticoHome.paqueteturisticoIdPaqueteturistico}"/>
   <param name="usuarioFrom"/>
   <param name="usuarioIdUsuario" value="#{usuarioHome.usuarioIdUsuario}"/>

   <navigation from-action="#{compraHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/compraList.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{compraHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/compra.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{compraHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/compraList.xhtml"/>
      </rule>
   </navigation>
   
</page>