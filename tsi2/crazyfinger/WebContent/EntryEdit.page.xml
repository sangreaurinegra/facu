<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/EntryList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{entryHome.wire}"/>

   <param name="entryFrom"/>
   <param name="entryIdEntry" value="#{entryHome.entryIdEntry}"/>


   <navigation from-action="#{entryHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Entry.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{entryHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Entry.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{entryHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/EntryList.xhtml"/>
      </rule>
   </navigation>

</page>
